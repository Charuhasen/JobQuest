<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MySocialLinks">

    <TextView
        android:id="@+id/txtSocialMediaPages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Media Pages"
        android:textStyle="bold"
        android:textSize="50dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/txtfacebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtSocialMediaPages"
        android:layout_centerHorizontal="true"
        android:text="Facebook"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/linkfacebook"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtfacebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtinstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linkfacebook"
        android:layout_centerHorizontal="true"
        android:text="Instagram"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/linkinstagram"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtinstagram"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/txtlinkedin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linkinstagram"
        android:layout_centerHorizontal="true"
        android:text="LinkedIn"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        />

    <EditText
        android:id="@+id/linklinkedin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtlinkedin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/btnAddSocialMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Update"
        android:layout_below="@+id/linklinkedin"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_border"
        />

</RelativeLayout>